<UserControl x:Class="JohnJustLoad.SettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" CornerRadius="12.5" Background="#666">
                            <Ellipse x:Name="Thumb" 
                                    Width="20" Height="20" 
                                    Fill="White" 
                                    HorizontalAlignment="Left" 
                                    Margin="2.5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#4CAF50"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- Page Header -->
            <TextBlock Text="Settings" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      Margin="0,0,0,30"/>

            <!-- General Settings -->
            <TextBlock Text="General" 
                      FontSize="18" 
                      FontWeight="SemiBold" 
                      Foreground="White" 
                      Margin="0,0,0,15"/>

            <Border Style="{StaticResource SettingCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Dark Mode" FontSize="16" Foreground="White" FontWeight="Medium"/>
                        <TextBlock Text="Switch between light and dark theme" FontSize="12" Foreground="#CCFFFFFF"/>
                    </StackPanel>

                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleButtonStyle}" IsChecked="True"/>
                </Grid>
            </Border>

            <Border Style="{StaticResource SettingCardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Notifications" FontSize="16" Foreground="White" FontWeight="Medium"/>
                        <TextBlock Text="Enable system notifications" FontSize="12" Foreground="#CCFFFFFF"/>
                    </StackPanel>

                    <ToggleButton Grid.Column="1" Style="{StaticResource ToggleButtonStyle}" IsChecked="False"/>
                </Grid>
            </Border>

            <!-- Appearance Settings -->
            <TextBlock Text="Appearance" 
                      FontSize="18" 
                      FontWeight="SemiBold" 
                      Foreground="White" 
                      Margin="0,20,0,15"/>

            <Border Style="{StaticResource SettingCardStyle}">
                <StackPanel>
                    <TextBlock Text="Language" FontSize="16" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                    <ComboBox SelectedIndex="0" Background="#30FFFFFF" Foreground="White" BorderThickness="0" Padding="10">
                        <ComboBoxItem Content="English" Foreground="Black"/>
                        <ComboBoxItem Content="ไทย" Foreground="Black"/>
                        <ComboBoxItem Content="中文" Foreground="Black"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingCardStyle}">
                <StackPanel>
                    <TextBlock Text="Font Size" FontSize="16" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                    <Slider Minimum="12" Maximum="24" Value="16" 
                           Background="Transparent" 
                           Foreground="#4CAF50"/>
                </StackPanel>
            </Border>

            <!-- Advanced Settings -->
            <TextBlock Text="Advanced" 
                      FontSize="18" 
                      FontWeight="SemiBold" 
                      Foreground="White" 
                      Margin="0,20,0,15"/>

            <Border Style="{StaticResource SettingCardStyle}">
                <StackPanel>
                    <TextBlock Text="Reset Application" FontSize="16" Foreground="White" FontWeight="Medium" Margin="0,0,0,10"/>
                    <TextBlock Text="This will reset all settings to default values" FontSize="12" Foreground="#CCFFFFFF" Margin="0,0,0,15"/>
                    <Button Content="Reset Settings" 
                           Background="#F44336" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="15,8" 
                           FontSize="12"
                           HorizontalAlignment="Left">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="6" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>