<UserControl x:Class="JohnJustLoad.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FFFFFF"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="30">
            <!-- Page Header -->
            <TextBlock Text="Home Dashboard" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White" 
                      Margin="0,0,0,30"/>

            <!-- Stats Cards -->
            <UniformGrid Columns="3" Margin="0,0,0,30">
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Users" FontSize="16" Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                        <TextBlock Text="1,234" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Revenue" FontSize="16" Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                        <TextBlock Text="$12,345" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="📈" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Growth" FontSize="16" Foreground="#CCFFFFFF" HorizontalAlignment="Center"/>
                        <TextBlock Text="+15.2%" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Main Content -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Welcome Message" 
                              FontSize="20" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              Margin="0,0,0,15"/>

                    <TextBlock Text="This is your modern WPF application dashboard. The glassmorphism design provides a sleek, translucent interface that's both beautiful and functional." 
                              FontSize="14" 
                              Foreground="#CCFFFFFF" 
                              TextWrapping="Wrap" 
                              LineHeight="20"
                              Margin="0,0,0,20"/>

                    <Button Content="Get Started" 
                           Background="#2196F3" 
                           Foreground="White" 
                           BorderThickness="0" 
                           Padding="20,10" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8" 
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>